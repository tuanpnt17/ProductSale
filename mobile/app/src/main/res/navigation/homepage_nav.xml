<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage_nav"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.prm392.assignment.productsale.view.fragment.main.home.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_searchFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_searchFragment_to_onSaleFragment"
            android:label="OnSale"
            app:destination="@id/onSaleFragment"/>
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.prm392.assignment.productsale.view.fragment.main.home.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_historyFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_historyFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_historyFragment_to_onSaleFragment"
            app:destination="@id/onSaleFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.prm392.assignment.productsale.view.fragment.main.home.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/action_chatFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_chatFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_chatFragment_to_onSaleFragment"
            app:destination="@id/onSaleFragment" />
    </fragment>

    <fragment
        android:id="@+id/onSaleFragment"
        android:name="com.prm392.assignment.productsale.view.fragment.main.home.CartFragment"
        android:label="fragment_on_sale"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_onSaleFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_onSaleFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_onSaleFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
</navigation>
